{% include 'header.tpl' %}
{% if errMsg %}
<div class="row">
<div class="span3 offset4 alert alert-error"><i class="icon-warning-sign icon-white"></i> {{ errMsg }} </div>
</div>
{% endif %}
<div class="row">
<div class="span3 offset4">
<form action="/login" method="POST" class="form-signin">
<input type="text" width="30" name="user" placeholder="Username"/>
<input type="password" width="30" name="passwd" placeholder="Password"/>
<input class="btn btn-primary" type="submit" width="30" name="ok" value="Login" />
</form>
</div>
</div>
{% include 'footer.tpl' %}
